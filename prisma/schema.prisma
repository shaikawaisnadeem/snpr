generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Register {
  id Int @id @default(autoincrement())
  username String 
  email String @unique
  password String
}

model Login {
  email String @unique
  password String 
}